<p id="notice"><%= notice %></p>

<h1>Listing Keywords</h1>

<h2>Import Keyword</h2>
<fieldset>
<%= form_tag import_keywords_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
</fieldset>

<br />

<table>
  <thead>
    <tr>
      <th>Keywords</th>
      <th>AdWords Top</th>
      <th>AdWords Right</th>
      <th>AdWords Total</th>
      <th>Non AdWords Results</th>
      <th>Total Search Results</th>
      <th style="width: 250px;"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.keywords %></td>
        <td><%= keyword.adwords_top %></td>
        <td><%= keyword.adwords_right %></td>
        <td><%= keyword.adwords_total %></td>
        <td><%= keyword.non_adwords_results %></td>
        <td><%= keyword.total_search_results %></td>
        <td style="width: 50px;">
          <%= link_to 'Show', keyword, class: "show_button" %>
          <%= link_to 'Edit', edit_keyword_path(keyword), class: "edit_button" %>
          <%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

